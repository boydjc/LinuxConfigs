set tabstop=4
set shiftwidth=4
set expandtab
set wrap
set autoindent
set mouse=a
set number
syntax on
let g:netrw_dirhistmax = 0


" VIMSCRIPT ----------------------------------------- {{{

" Enable code folding
augroup filetype_vim
    autocmd!
    autocmd FileType vim setlocal foldmethod=marker
augroup END

"}}}


